<Window x:Class="Lottery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:my="clr-namespace:Lottery.UC"
        Title="杰瑞兆新幸运大抽奖"
        Height="378" Width="628" WindowStartupLocation="CenterScreen" WindowState="Maximized" 
        Icon="Images\ico.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images\bg.jpg" Stretch="Fill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="获奖号码为：" Height="60" HorizontalAlignment="Left" Margin="20,0,0,0" x:Name="labelFinalPrice" VerticalAlignment="Center" FontSize="36" Foreground="White"/>

            <TextBox Grid.Row="1" Height="60" HorizontalAlignment="Left" Margin="10,0,0,0" x:Name="textBoxFinalPrice" VerticalAlignment="Center" MinWidth="102" IsReadOnly="True" FontSize="36" TextAlignment="Right" Foreground="Red" BorderThickness="2" >
                <TextBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF979797"/>
                        <GradientStop Color="#FFD0D0D0" Offset="1"/>
                        <GradientStop Color="#FFEBEBEB" Offset="0.263"/>
                        <GradientStop Color="#FFEDEDED" Offset="0.841"/>
                        <GradientStop Color="White" Offset="0.517"/>
                    </LinearGradientBrush>
                </TextBox.Background>
                <TextBox.BorderBrush>
                    <LinearGradientBrush EndPoint="0,1" MappingMode="RelativeToBoundingBox" StartPoint="0,0">
                        <GradientStop Color="#FFED9426"/>
                        <GradientStop Color="#FFC46310" Offset="1"/>
                        <GradientStop Color="#FFD98933" Offset="0.612"/>
                        <GradientStop Color="#FEAF5800" Offset="0.655"/>
                    </LinearGradientBrush>
                </TextBox.BorderBrush>
            </TextBox>
        </StackPanel>
        
        <my:NumberGroup Grid.Row="1"  HorizontalAlignment="Center" x:Name="numberGroupMain"  HorizontalContentAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Content="开始" Height="36" x:Name="buttonStart" VerticalAlignment="Center" Width="82" Click="buttonStart_Click" FontSize="16">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                    <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                    <GradientStop Color="#FFF9E1C3" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
            <Button Grid.Row="1" Content="停止" Height="36" HorizontalAlignment="Left"  x:Name="buttonStop" VerticalAlignment="Center" Width="82" Click="buttonStop_Click" IsEnabled="False" FontSize="16" Margin="10,0,0,0">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF3F3F3" Offset="0"/>
                        <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                        <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                        <GradientStop Color="#FFF9E1C3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>
